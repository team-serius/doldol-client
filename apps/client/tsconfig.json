{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@interface/*": ["src/interface/*"],
      "@common/*": ["src/common/*"],
      "@ui/*": ["../../packages/ui/src/*", "../../packages/ui/src/components/*"],
      "@ui/Carousel/*": ["../../packages/ui/src/components/Carousel/*"],
      "@icons/*": ["../../packages/icons/src/icons/*"],
      "@libs/*": ["../../packages/libs/src/*"],
      "@styles/*": ["src/styles/*"],
      "@config/*": ["../../packages/config/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "../../packages/ui/src/**/*",
    "../../packages/icons/src/**/*",
    "../../packages/libs/src/**/*"
  ],
  "exclude": ["node_modules"]
}
